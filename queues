#include <stdio.h>
#include <conio.h>
#define size 5
int A[size];
int rear=-1;
int front =-1;
int isfull()
{   
      if (rear==size-1)
      return 1;
      else
      return 0;
}
int isempty()
{
    if(rear=-1&& front==-1)
      return 1;
   else 
      return 0;
}
void eq(int x)
{
if (isfull())
    printf("queue is full");
else 
    if (isempty())
       { rear=0;front=0;
}
else 
        rear=rear+1;
A[rear]=x;
}
int dqueue()
{if(isempty())
    
    printf("q is empty");
    
    else 
    
if (front==rear)
    
    {
        printf("%d",A[front]);
       
       front=-1;
    
       rear=-1;
    }
    else
    {
        printf("%d",A[front]);
        front=front+1;
    }
}    
int display()
{int i;
for (i=0;i<size;i++)
{printf("%d",A[i]);}
}
int main()
    {    int choice,item;
        while(1)
        {
                printf("\n1.Insert\n");
                printf("2.Delete\n");
                printf("3.Display all elements of the queue\n");
                printf("5.Quit\n");
                printf("\nEnter your choice : ");
                scanf("%d",&choice);

                switch(choice)
                {
                case 1:
                        printf("\nInput the element for adding in queue : ");
                        scanf("%d",&item);
                        eq(item);
                        break;
                case 2:
                        dqueue();
                        
                        break;
                case 3:
                       
                        display();
                        break;
                case 5:
                        exit(1);
                default:
                        printf("\nWrong choice\n");
                }
        }
    }
    
   
